<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrlogin"
    tools:context=".Activities.Profile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_leftright"
        android:layout_marginTop="@dimen/invoice_details_margin_top"
        android:layout_marginRight="@dimen/profile_margin_leftright"
        android:background="@drawable/profile_border"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:rowCount="7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Cod factura"/>
        <TextView
            android:id="@+id/invoiceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="~invoiceId~"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Cod utilizator"/>
        <TextView
            android:id="@+id/accountId_invoicesdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="~acccountId~"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Adresa de facturare"/>
        <TextView
            android:id="@+id/addressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:layout_margin="@dimen/margin_home_button"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="~call in baza de date cu addressId~"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="TVA"/>
        <TextView
            android:id="@+id/simplyVAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="~VAT"/>

    </GridLayout>
</LinearLayout>