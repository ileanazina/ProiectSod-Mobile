<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewform"
        android:background="@drawable/profile_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/row_border"
            >

            <TextView
                android:id="@+id/documentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_home_button" />

            <TextView
                android:id="@+id/documentInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/documentType"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_home_button" />

            <TableRow
                android:layout_alignParentEnd = "true"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_below="@+id/documentInfo"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageButton
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/upload"
                    android:layout_margin="@dimen/margin_home_button" />

                <ImageButton
                    android:id="@+id/downloadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/download"
                    android:layout_margin="@dimen/margin_home_button" />
            </TableRow>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>