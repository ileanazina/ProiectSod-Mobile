<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/row_border"
        android:padding="15dp">

    <TextView
        android:id="@+id/documentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginRight="12dp" />

        <TableRow
            android:layout_alignParentEnd = "true"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/documentType"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/download"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/margini_buton"
                android:drawableTop="@drawable/ic_download"
                android:layout_marginRight="0dp" />
            <Button
                android:id="@+id/upload"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/margini_buton"
                android:drawableTop="@drawable/ic_upload"
                android:layout_marginRight="0dp" />
        </TableRow>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>