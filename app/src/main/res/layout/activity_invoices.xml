<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrlogin"
    tools:context=".Activities.Invoices">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1" />

    <GridLayout
        android:id="@+id/gridViewForButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:stretchMode="spacingWidthUniform"
        android:orientation="horizontal"
        android:layout_below="@id/imageView">

        <Button
            android:id="@+id/unpayedInvoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facturi\nneplatite"
            android:background="@drawable/button_invoices"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_gravity="start|top"
            android:textSize="@dimen/invoices_button_text"
            android:fontFamily="@font/cherry_swash"/>

        <Button
            android:id="@+id/payedInvoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facturi\nplatite"
            android:textAllCaps="false"
            android:layout_gravity="center|top"
            android:textColor="@color/black"
            android:background="@drawable/button_invoices"
            android:textSize="@dimen/invoices_button_text"
            android:fontFamily="@font/cherry_swash"/>

        <Button
            android:id="@+id/allInvoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_invoices"
            android:fontFamily="@font/cherry_swash"
            android:textSize="@dimen/invoices_button_text"
            android:text="Toate\nfacturile"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/profile_border"
        android:layout_marginRight="@dimen/profile_margin_leftright"
        android:layout_marginLeft="@dimen/profile_margin_leftright"
        android:id="@+id/invoiceRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below= "@id/gridViewForButtons"/>
</RelativeLayout>