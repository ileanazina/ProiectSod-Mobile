<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/backgrlogin"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="left"
            app:srcCompat="@drawable/logo1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_menu_sold"
            android:textSize="@dimen/profil_textsize"
            android:fontFamily="@font/cherry_swash"
            android:layout_marginLeft="@dimen/margin_top"
            android:layout_marginTop="@dimen/ampm_left_padding"/>
        <TextView
            android:id="@+id/valLastUnpaidInvoices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/profil_textsize"
            android:fontFamily="@font/cherry_swash"
            android:layout_marginLeft="@dimen/ampm_left_padding"
            android:layout_marginTop="@dimen/ampm_left_padding"/>
        <Button
            android:id="@+id/mainMenuPayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/main_menu_pay_button"
            android:textColor="@color/black"
            android:fontFamily="@font/cherry_swash"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/ampm_left_padding"/>


    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <Spinner
            android:id="@+id/spAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:rowCount="3"
        android:orientation="horizontal"
        android:columnOrderPreserved="false"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/profile_margin_top"
        android:columnCount="2">

        <Button
            android:id="@+id/buttonForms"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:fontFamily="@font/cherry_swash"
            android:textAllCaps="false"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/form"
            android:text="@string/main_menu_forms"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/buttonIndex"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/index"
            android:fontFamily="@font/cherry_swash"
            android:textAllCaps="false"
            android:text="@string/main_menu_indexes"
            android:textColor="@color/Black"
            />

        <Button
            android:id="@+id/buttonInvoice"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:fontFamily="@font/cherry_swash"
            android:textAllCaps="false"
            android:drawableTop="@drawable/invoice"
            android:text="@string/main_menu_invoices"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/buttonDetails"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/moredetais"
            android:fontFamily="@font/cherry_swash"
            android:textAllCaps="false"
            android:text="@string/main_menu_info"
            android:textColor="@color/Black" />


        <Button
            android:id="@+id/buttonPayments"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="2"
            android:layout_column="0"
            android:fontFamily="@font/cherry_swash"
            android:textAllCaps="false"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/payment"
            android:text="@string/main_menu_payment"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/buttonProfile"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="2"
            android:layout_column="1"
            android:fontFamily="@font/cherry_swash"
            android:textAllCaps="false"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/profile"
            android:text="@string/main_menu_profile"
            android:textColor="@color/Black" />
    </GridLayout>

    </LinearLayout>
</ScrollView>