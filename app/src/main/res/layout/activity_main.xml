<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung3"
    tools:context=".MainActivity">

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    -->

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:rowCount="3"
        android:orientation="horizontal"
        android:columnOrderPreserved="false"
        android:columnCount="2"
        >

        <Button
            android:id="@+id/buttonForms"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/form"
            android:text="Formulare"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/buttonIndex"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/index"
            android:text="Index"
            android:textColor="@color/Black"
            />

        <Button
            android:id="@+id/buttonInvoice"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/invoice"
            android:text="Facturi"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/buttonDetails"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/moredetais"
            android:text="Detalii"
            android:textColor="@color/Black" />


        <Button
            android:id="@+id/buttonPayments"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/payment"
            android:text="Plati"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/buttonProfile"
            android:layout_width="@dimen/home_button"
            android:layout_height="@dimen/home_button"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:background="@drawable/margini_buton"
            android:drawableTop="@drawable/profile"
            android:text="Profil"
            android:textColor="@color/Black" />
    </GridLayout>
</LinearLayout>