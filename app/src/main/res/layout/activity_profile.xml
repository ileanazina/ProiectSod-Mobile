<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroung3"
    tools:context=".Profile">

    <TextView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:rowCount="6"
        android:orientation="horizontal"
        android:columnOrderPreserved="false"
        android:layout_marginTop="@dimen/profile_margin_top"
        android:layout_marginRight="@dimen/profile_margin_leftright"
        android:layout_marginLeft="@dimen/profile_margin_leftright"
        android:background="@drawable/profile_border"
        android:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:fontFamily="@font/chelsea_market"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="Cod client:" />
        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="~ userId ~" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="Nume:" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:text="~ firstname+ lastname || companyname ~"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="CNP:" />
        <TextView
            android:id="@+id/personalCOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:layout_row="3"
            android:layout_column="1"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="~ cui || cnp ~ se va modifica si in fata in cazul in care trebuie" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="Email:" />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:layout_row="2"
            android:layout_column="1"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="~ email ~" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="Telefon:" />
        <TextView
            android:id="@+id/telephonNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:layout_row="4"
            android:layout_column="1"
            android:textColor="@color/black"
            android:textSize="@dimen/profil_textsize"
            android:text="~ telefon ~" />

    </GridLayout>
</LinearLayout>