<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Grey"
    tools:context=".Activities.ProfileFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonEmailMyInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_gravity="end|top"
        android:background="@drawable/button_invoices"
        android:text="@string/invoice_detail_email_me_button" />

    <!-- about invoice -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_home_button"
        android:background="@drawable/profile_border"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/invoicedetails_textsize"
        android:text="@string/invoice_detail_first_border" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_leftright"
        android:layout_marginRight="@dimen/profile_margin_leftright"
        android:background="@drawable/profile_border"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:rowCount="7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="@string/invoice_detail_invoiceId_intro"/>
        <TextView
            android:id="@+id/invoiceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="@string/invoice_detail_issue_date_intro"/>
        <TextView
            android:id="@+id/dateOfIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="@string/invoice_detail_due_date_intro"/>
        <TextView
            android:id="@+id/dueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="@string/invoice_detail_all_pay_intro"/>
        <TextView
            android:id="@+id/youHaveToPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="@string/invoice_detail_remaining_balance_intro"/>
        <TextView
            android:id="@+id/soldFromPast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

    </GridLayout>

    <!-- about client -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_home_button"
        android:background="@drawable/profile_border"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/invoicedetails_textsize"
        android:text="@string/invoice_detail_second_border" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_leftright"
        android:layout_marginRight="@dimen/profile_margin_leftright"
        android:background="@drawable/profile_border"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:rowCount="7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="@string/invoice_detail_accountId_intro"/>
        <TextView
            android:id="@+id/accountId_invoicesdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="@string/invoice_detail_billing_address_intro"/>
        <TextView
            android:id="@+id/addressId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black" />

    </GridLayout>

    <!-- about price -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_home_button"
        android:background="@drawable/profile_border"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/invoicedetails_textsize"
        android:text="@string/invoice_detail_third_border" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_leftright"
        android:layout_marginRight="@dimen/profile_margin_leftright"
        android:background="@drawable/profile_border"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:rowCount="7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Unitate de masura"/>
        <TextView
            android:id="@+id/unitMeasurementType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Pretul per unitate"/>
        <TextView
            android:id="@+id/pricePerUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Cantitate consumata"/>
        <TextView
            android:id="@+id/consumedQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="TVA"/>
        <TextView
            android:id="@+id/simplyVAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Pret fara TVA"/>
        <TextView
            android:id="@+id/valueWithoutVAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Pret cu TVA"/>
        <TextView
            android:id="@+id/valueWithVat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

    </GridLayout>

    <!-- about issuer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_home_button"
        android:background="@drawable/profile_border"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/invoicedetails_textsize"
        android:text="Detalii furnizor" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_margin_leftright"
        android:layout_marginRight="@dimen/profile_margin_leftright"
        android:background="@drawable/profile_border"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:rowCount="7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="CUI"/>
        <TextView
            android:id="@+id/IssueCUI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/margin_home_button"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize"
            android:text="Adresa"/>
        <TextView
            android:id="@+id/IssueAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/margin_home_button"
            android:layout_marginRight="@dimen/profile_margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/invoicedetails_textsize" />
    </GridLayout>
</LinearLayout>
</ScrollView>